<h2 class="mt-5 mb-4">Welcome to Barber Shop</h2>

<% if @message && @message.length > 0 then %>

  <div class="alert alert-success mt-1 mb-1">
    <p><%= @message %></p>
  </div>

<% end %>

<form action="/visit" method="POST">
  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" value="<%= @username %>">
  </div>
  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control" value="<%= @phone %>">
  </div>
  <div class="form-group">
    <label>Visiting date and time</label>
    <input id="DTpic" name="datetime" type="text" class="form-control" value="<%= @datetime %>" autocomplete="off">
  </div>

  <div class="form-group">
    <label>Choose your barber</label>
    <select name="barber" class="form-control">
      <% @barbers.each do |barber| %>
        <option <%= @barber == barber['barbername'] ? 'selected' : '' %> ><%= barber['barbername'] %></option>
      <% end %>
    </select>
  </div>



  <div class="form-group">
    <label>Choose your hair color</label><br>
    <select id="color" name="color">
      <option value="none">none</option>
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button name="sign" type="submit" class="btn btn-primary">Send info</button>
</form>

<script type="text/javascript">
  $('#color').simplecolorpicker();
  $('#DTpic').datetimepicker();
</script>
